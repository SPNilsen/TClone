<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".activities.StartupActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/StartupLogoWidth"
        android:layout_height="@dimen/StartupLogoHeight"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tinder_clone_logo"
        android:layout_margin="@dimen/StartupLayoutMargin"
        />

    <Button
        style="@style/StandardButton"
        android:layout_width="302dp"
        android:layout_height="@dimen/StandardButtonHeight"
        android:onClick="onLogin"
        android:text="@string/StartupButtonLogin"/>

    <Button
        style="@style/StandardButton"
        android:layout_width="@dimen/StandardButtonWidth"
        android:layout_height="@dimen/StandardButtonHeight"
        android:text="@string/StartupButtonSignup"
        android:onClick="onSignUp"
        />
</LinearLayout>